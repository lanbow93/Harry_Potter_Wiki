<%- include("../partials/head.ejs")  %>

<div class="container">
    <div class="row ">
        <div class="col"><h1 class="text-center">List of Beings</h1></div>
    </div>
    <div class="row">
        <div class="col-lg-3 text-center mt-3">
            <button class="btn hufflepuff fw-bold p-3" onclick="window.location.href='/landings/submenu?region=<%= chosenContinent %>'" >Back To Area Select</button></a>
        </div>
        <div class="col-lg-6"></div>
        <div class="col-lg-3 text-center mt-3">
            <button class="btn gryffindor fw-bold p-3" onclick="window.location.href='/beings/new?region=<%= chosenContinent %>'" >New Being</button></a>
        </div>
    </div>
    <div class="row d-flex justify-content-between mt-3">
        <%for (let i=0; i<beings.length; i++) { %>
            <div class="col-lg-3 text-center px-0">
                <h2 class="text-white mt-3"><%= beings[i].firstName + " " + beings[i].lastName%></h2>
                <a href="/beings/<%= beings[i]._id%>?region=<%= chosenContinent %>">
                    <img src="<%= beings[i].imageURL %>" alt="Image of a <%= beings[i].firstName + ' ' + beings[i].lastName %>" class="indexImage border border-4 rounded-circle">
                </a>
            </div>
            <% if ((i+1) % 3 === 0) { %>
                </div>
                <div class="row d-flex justify-content-between mt-3">
            <% }%>
        <% } %>
    </div>
</div>




