<%- include("../partials/head.ejs")  %>
<div class="row">
    <div class="col text-center">
        <h1 >Edit <%= location.locationName %></h1>
    </div>
</div>
<div class="row">
    <div class="col-1 justify-center"></div>
    <div class="col">
        <form action="/locations/<%=id%>?_method=PUT&region=<%=chosenContinent%>" method="post">
            <div class="row">
                <div class="col text-end"><p>Location Name:</p></div>
                <div class="col"><input type="text" name="locationName" placeholder="Location Name" value="<%= location.locationName %>" class="formFullTextbox"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Continent</p></div>
                <div class="col"><select name="continent" >
                    <option value="Africa">Africa</option>
                    <option value="Asia">Asia</option>
                    <option value="Australia">Australia</option>
                    <option value="NorthAmerica">North America</option>
                    <option value="SouthAmerica">South America</option>
                    <option value="Europe">Europe</option>
                  </select></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Location:</p></div>
                <div class="col"><input type="text" name="location" placeholder="" value="<%= location.location %>" class="formFullTextbox"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Category:</p></div>
                <div class="col"><input type="text" name="category" placeholder="" value="<%= location.category %>" class="formFullTextbox"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Image URL:</p></div>
                <div class="col"><input type="text" name="imageURL" placeholder="Image URL" value="<%= location.imageURL %>" class="formFullTextbox"></div>
            </div>
            <div class="row">
                <div class="col text-center"><p>Description:</p></div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <textarea id="txtid" name="description" rows="4" cols="50" class="formFullTextbox"><%= location.description%>
                </textarea></div>
            </div>
            <div class="row mt-3">
                <div class="col text-center ">
                    <input type="submit" value="Update Location Information" class="btn bg-success text-white fw-bold largeImageDisplay">
                </div>
            </div>
        </form>
        <div class="col text-center mt-3 ">
            <button class="btn bg-danger text-white fw-bold largeImageDisplay" onclick="window.location.href='/locations?region=<%= chosenContinent %>'">Cancel</button>
        </div>
    </div>
    <div class="col-1"></div>
</div>