<%- include("../partials/head.ejs")  %>

<div class="container">
    <div class="row text-center">
        <p>(NAVMENU)</p>
    </div>
    <div class="row ">
        <div class="col"><h1 class="text-center">List of Locations</h1></div>
    </div>
    <div class="row">
        <div class="col-lg-3 text-center mt-3">
            <button class="btn hufflepuff fw-bold p-3" onclick="window.location.href='/locationsIndex%>'" >Back To Area Select</button></a>
        </div>
        <div class="col-lg-6"></div>
        <div class="col-lg-3 text-center mt-3">
            <button class="btn gryffindor fw-bold p-3" onclick="window.location.href='/locations/new?region=<%= chosenContinent %>'" >New Location</button></a>
        </div>
    </div>

    <div class="row d-flex justify-content-between mt-3">
        <%for (let i=0; i<locations.length; i++) { %>
        <div class="col-lg-3 text-center px-0">
            <h2 class="text-white mt-3"><%= locations[i].locationName %></h2>
            <a href="/locations/<%= locations[i]._id%>?region=<%= chosenContinent %>" >
                <img src="<%= locations[i].imageURL %>" alt="Image of a <%= locations[i].locationName %>" class="indexImage border border-4 rounded-circle">
            </a>
        </div>

        <% if ((i+1) % 3 === 0) { %>
        </div>
        <div class="row d-flex justify-content-between mt-3">
        <% }%>

        <% } %>


    </div>
    

</div>




