<%- include("../partials/head.ejs")  %>
<!-- Modal Section -->
<div class="modalViewer">
    <div class="modalMessage text-center p-3">
        <h2>Confirm You Want To Delete The Page For:</h2>
        <br>
        <h1><%= being.firstName + " " + being.lastName %></h1>
        <form action="/locations/<%= location._id %>?_method=DELETE&region=<%= chosenContinent %>" method="post" class=" row d-flex justify-content-around mt-3">
            <!-- Yes Button -->
            <div class="col"><button class="btn gryffindor p-3" type="submit">Yes</button></div>
            <!-- No Button -->
            <div class="col"><button class="btn hufflepuff fw-bold p-3 closeModal" type="button">No</button></div>
        </form>
    </div>
</div>
<!-- End of Modal -->

<div class="container">
    <div class="row">
        <div class="col"><h1 class="text-center"><%= location.locationName %></h1></div>
    </div>
    <div class="centerImage">
        <div class="row largeImageDisplay">
            <img src="<%= location.imageURL %>" alt="" >
        </div>    
    </div>
    <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-5 border text-center blackBackground"><p>Category:<br><%= location.category%></p></div>
        <div class="col-5 text-center border blackBackground"><p>Location Found:<br><%= location.location %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col border blackBackground"><p>Description:<br><%= location.description %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row justify-content-evenly">
        <div class="col-lg-3 mt-3 ">
            <button class="btn ravenclaw fw-bold p-3" type="button" onclick="window.location.href='/locations/<%=id%>/edit?region=<%= chosenContinent %>'">Edit Page<button>
        </div>
        <div class="col-lg-3 mt-3">
            <button class="btn hufflepuff fw-bold p-3" type="button" onclick="window.location.href='/locations?region=<%= chosenContinent %>'">Back To Location List<button>
        </div>
        <div class="col-lg-3 mt-3">
            <button class="btn gryffindor confirmPopup fw-bold p-3">Delete Location Entry</button> 
        </div>     
    </div>  
</div>





