<%- include("../partials/head.ejs")  %>

<div class="modalViewer">
    <div class="message text-center">
        <h2>Confirm You Want To Delete The Page For:</h2>
        <br>
        <h1><%= creature.creatureName %></h1>
        <form action="/creatures/<%= creature._id %>?_method=DELETE" method="post" class=" row d-flex justify-content-around">
            <button class="gryffindor" type="submit">Yes</button>
            <button class="closeModal hufflepuff" type="button">No</button>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col"><h1 class="text-center"><%= creature.creatureName %></h1></div>
    </div>
    <div class="centerImage">
        <div class="row largeImageDisplay">
            <img src="<%= creature.imageURL %>" alt="" >
        </div>    
    </div>
    <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-5 border text-center blackBackground"><p>M.O.M. Classification:<br><%= creature.ministryClassification%></p></div>
        <div class="col-5 border text-center blackBackground"><p>Rarity Status:<br><%= creature.isRare ? "RARE" : "COMMON"  %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col text-center border blackBackground"><p>Location Found:<br><%= creature.creatureLocation %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col border blackBackground"><p>Description:<br><%= creature.description %></p></div>
        <div class="col-1"></div>
    </div>

    
    <div class="row justify-content-evenly">
        <div class="col-lg-3 mt-3">
            <button class="btn ravenclaw fw-bold" type="button" onclick="window.location.href='/creatures/<%=id%>/edit'">Edit Page<button>
        </div>
        <div class="col-lg-3 mt-3">
        <button class="btn hufflepuff fw-bold" type="button" onclick="window.location.href='/creatures'">Back To Creature List<button>
        </div>
        <div class="col-lg-3 mt-3">
            <button class="btn gryffindor confirmPopup fw-bold ">Delete Creature Entry</button> 
        </div>     
    </div>  

</div>





