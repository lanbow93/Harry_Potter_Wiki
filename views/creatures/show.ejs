<%- include("../partials/head.ejs")  %>
<!-- Modal Section -->
<div class="modalViewer">
    <div class="modalMessage text-center">
        <h2>Confirm You Want To Delete The Page For:</h2>
        <br>
        <h1><%= creature.creatureName %></h1>
        <form action="/creatures/<%= creature._id %>?_method=DELETE&region=<%= chosenContinent %>" method="post" class=" row d-flex justify-content-around mt-3">
            <!-- Yes Button -->
            <div class="col"><button class="btn gryffindor p-3" type="submit">Yes</button></div>
            <!-- No Button -->
            <div class="col"><button class="btn hufflepuff fw-bold p-3 closeModal" type="button">No</button></div>
        </form>
    </div>
</div>
<!-- End of Modal -->

<div class="container">
    <div class="row">
        <div class="col"><h1 class="text-center mt-3"><%= creature.creatureName %></h1></div>
    </div>
    <div class="centerImage">
        <div class="row largeImageDisplay">
            <img src="<%= creature.imageURL %>" alt="" >
        </div>    
    </div>
    <div class="row mt-3">
        <div class="col-1"></div>
        <div class="col-5 border text-center blackBackground"><p><span class="fancy">M.O.M. Classification:</span><br><%= creature.ministryClassification%></p></div>
        <div class="col-5 border text-center blackBackground"><p><span class="fancy">Rarity Status:</span><br><%= creature.isRare ? "RARE" : "COMMON"  %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col text-center border blackBackground"><p><span class="fancy">Location Found:</span><br><%= creature.creatureLocation %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col border blackBackground"><p><span class="fancy">Description:</span><br><%= creature.description %></p></div>
        <div class="col-1"></div>
    </div>
    <div class="row justify-content-evenly">
        <div class="col-lg-3 mt-3 ">
            <button class="btn ravenclaw fw-bold p-3" type="button" onclick="window.location.href='/creatures/<%=id%>/edit?region=<%= chosenContinent %>'">Edit Page<button>
        </div>
        <div class="col-lg-3 mt-3">
        <button class="btn hufflepuff fw-bold p-3" type="button" onclick="window.location.href='/creatures?region=<%= chosenContinent %>'">Back To Creature List<button>
        </div>
        <div class="col-lg-3 mt-3">
            <button class="btn gryffindor confirmPopup fw-bold p-3">Delete Creature Entry</button> 
        </div>     
    </div>  
</div>





