<%- include("../partials/head.ejs")  %>
<div class="row">
    <div class="col text-center">
        <h1>Log New Creature</h1>
    </div>
</div>
<div class="row">
    <div class="col-1 justify-center"></div>
    <div class="col">
        <form action="/creatures?region=<%chosenContinent%>" method="post">
            <div class="row">
                <div class="col text-end"><p>Species Name:</p></div>
                <div class="col"><input type="text" name="creatureName" placeholder="Species Name" class="fullWidth"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>M.O.M. Classification:</p></div>
                <div class="col"><input type="text" name="ministryClassification" placeholder="(XXXX)"  class="fullWidth"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Location:</p></div>
                <div class="col"><input type="text" name="creatureLocation" placeholder="Location of Species" class="fullWidth"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Continent:</p></div>
                <div class="col" class=""><p><%= chosenContinent %></p></div>
                <input type="hidden" name="continent" value="<%= chosenContinent %>">
            </div>
            <div class="row">
                <div class="col text-end"><p>Image URL:</p></div>
                <div class="col"><input type="text" name="imageURL" placeholder="Image URL" class="fullWidth"></div>
            </div>
            <div class="row">
                <div class="col text-end"><p>Check Box If Rare:</p></div>
                <div class="col" class="fullWidth"><input type="checkbox" name="isRare"></div>
            </div>
            <div class="row">
                <div class="col text-center"><p>Description:</p></div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <textarea id="txtid" name="description" rows="4" cols="50" class="fullWidth"></textarea>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <input type="submit" value="Log New Creature" class="btn slytherin fw-bold largeImageDisplay p-3">
                </div>
                <div class="col text-center">
                    <button class="btn gryffindor fw-bold largeImageDisplay p-3" type="button" onclick="window.location.href='/creatures?region=<%= chosenContinent %>'">Cancel</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>